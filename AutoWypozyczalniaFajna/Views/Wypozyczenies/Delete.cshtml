@model AutoWypozyczalniaFajna.Models.Wypozyczenie

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Czy na pewno chcesz usunąć to wypożyczenie?</h3>
<div>
    <h4>Wypożyczenie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Samochod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Samochod.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataWypozyczenia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataWypozyczenia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataZwrotu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataZwrotu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CenaCalkowita)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CenaCalkowita)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
